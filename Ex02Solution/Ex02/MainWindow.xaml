                <TextBox x:Name="r" HorizontalAlignment="Left" Height="20" Margin="20,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>
                <TextBox x:Name="area" HorizontalAlignment="Left" Height="20" Margin="20,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>
                <TextBox x:Name="volume" HorizontalAlignment="Left" Height="20" Margin="116,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
