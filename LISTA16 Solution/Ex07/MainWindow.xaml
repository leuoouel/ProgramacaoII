            <TextBlock HorizontalAlignment="Left" Margin="130,107,0,0" TextWrapping="Wrap" Text="Semestre" VerticalAlignment="Top" Width="59"/>
            <TextBlock HorizontalAlignment="Left" Margin="210,107,0,0" TextWrapping="Wrap" Text="Média" VerticalAlignment="Top" Width="38"/>
