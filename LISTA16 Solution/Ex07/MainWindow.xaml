            <Button x:Name="excluir" Content="Excluir" HorizontalAlignment="Left" Margin="224,164,0,0" VerticalAlignment="Top" Width="69" Click="Button_Click_2"/>
            <Button x:Name="ira" Content="IRA" HorizontalAlignment="Left" Margin="309,164,0,0" VerticalAlignment="Top" Width="69" Click="Button_Click_3"/>
